<body>

	<div class="limiter">
		<div class="container-login100">
			<div class="wrap-login100">
				<div class="login100-pic js-tilt" data-tilt>
					<img src="images/img-01.png" alt="IMG">
				</div>

				<form class="login100-form validate-form" action="/check_connect" method="get">
					<span class="login100-form-title">
						GridFTP Transfer Service
					</span>

					<div class="wrap-input100 validate-input" data-validate="Valid hostname is required: ex.globus.org">
						<!-- ex@abc.xyz -->
						<input class="input100" type="text" name="desName" placeholder="Destination hostname">
						<span class="focus-input100"></span>
						<span class="symbol-input100">
							<i class="fa fa-desktop" aria-hidden="true"></i>
						</span>
					</div>

					<!-- <div class="wrap-input100 validate-input" data-validate = "Password is required">
						<input class="input100" type="password" name="pass" placeholder="Password">
						<span class="focus-input100"></span>
						<span class="symbol-input100">
							<i class="fa fa-lock" aria-hidden="true"></i>
						</span>
					</div> -->

					<div class="container-login100-form-btn">
						<button class="login100-form-btn">
							Connect
						</button>
					</div>
					<!-- <% if (typeof connectivity == "undefined") { %>
						<p>undefined</p>
						<%} else { %>
							<%= connectivity %>
								<%} %> -->
					
						<br>		
					<% if ((typeof connectivity != "undefined") && (typeof status != "undefined")) { %>
						<% if (connectivity == "true") { %>
							<p class="text-center ">Connected <%= status %> </p>
						<%} else { %>
							<p class="text-center" >Can't connect to destination <%= status %> </p>
						<%} %>
					<%} %>



