		});
		
		$("#remoteDelete").on("click", function () {
			var sourceFile = JSON.parse($('input[id=desFile]:checked').val())

			var context = {
				sourceName: sourceName, 
				sourceIp: sourceIp,
				desName: desName,
				desIp: desIp,
				sourceFile: sourceFile
			}
			
			socket.emit('remoteDelete', context)
			return false;
		});

